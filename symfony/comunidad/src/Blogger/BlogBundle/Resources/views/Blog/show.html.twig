{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
    <article class="blog">
        <header>
            <div class="date"><time datetime="{{ blog.created|date('c') }}">{{ blog.created|localizeddate('full', 'none', app.request.locale )}}</time></div>
            <h2>{{ blog.title }}</h2>
        </header>
        <img src="{{ asset(['images/', blog.image]|join) }}" alt="{{ blog.title }} image not found" class="large" />
        <div>
            <p>{{ blog.blog }}</p>
        </div>
    </article>
    
    <section class="comments" id="comments">
        <section class="previous-comments">
            <h3>{{ 'Comments'|trans }}</h3>
            {% include 'BloggerBlogBundle:Comment:index.html.twig' with { 'comments': comments } %}
        </section>
        
        <h3>{{ 'Add Comment'|trans }}</h3>
        {% render url('BloggerBlogBundle_comment_new', { 'blog_id': blog.id }) %}
    </section>
{% endblock %}