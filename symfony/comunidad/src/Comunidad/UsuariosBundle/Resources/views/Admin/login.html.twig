{% extends '::frontend.html.twig' %}

{% block title %} 
    Comunidad test 
{% endblock %}

{% block id 'login' %}
 
{% block article %} 

    
 {% if error %}
    <div>{{ error.message }}</div>
{% endif %}

<form action="{{ path('login_check') }}" method="post">
    <label for="username">Username:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />

    <label for="password">Password:</label>
    <input type="password" id="password" name="_password" />
    <input type="hidden" name="_target_path" value="/" />

    {#
        Si deseas controlar la URL a la que rediriges al
        usuario en caso de éxito (más detalles abajo)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit">login</button>
</form>   


 {% endblock %}
 
{% block aside %} 
<div class="lastUsers">{% render controller('UsuariosBundle:Usuarios:lastUsers') %}</div>
 <div class="lastMsgs">{% render controller('UsuariosBundle:Mensajes:lastMessages') %}</div> 
  {% endblock %}

