{# app/Resources/views/frontend.html.twig #}
{% extends '::base.html.twig' %}
 
{% block stylesheets %}

<link href="{{ asset('bundles/usuarios/css/normalice.css') }}"
          rel="stylesheet" type="text/css" />

<link href="{{ asset('bundles/usuarios/css/foundation.min.css') }}"
          rel="stylesheet" type="text/css" />

<link href="{{ asset('bundles/usuarios/css/styles.css') }}"
          rel="stylesheet" type="text/css" />

{% endblock %}

{% block javascripts %}

<script type="text/javascript" src="{{ asset('bundles/usuarios/js/jquery1.11.1.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/usuarios/js/foundation.min.js') }}"></script>

 <script>
    $(document).foundation();
  </script>

<script type="text/javascript" src="{{ asset('bundles/usuarios/js/common.js') }}"></script>

{% endblock %}
 
{% block body %}
<header>
    <h1>{% trans %}Comunity{% endtrans %}</h1>
    <nav>
        <!--ul>
            <li></li>
        </ul-->
    </nav>

        <ul>
            {% if app.user %}
                <li><a href="{{ path('logout') }}">{{ 'logout'|trans }}</a></li>
            {% else %}
                <li><a href="{{ path('login') }}">{{ 'login'|trans }}</a></li> 
            {% endif %}
        </ul>

</header>
 
<article>
    {% block article %}{% endblock %}
</article>
 
<aside>
    {% block aside %}{% endblock %}
</aside>
{% endblock %}

{% block footer %}
    <a href="{{ path('pagina_estatica', { 'pagina': 'ayuda' }) }}">{% trans %}Help{% endtrans %}</a>
    Contacto: <a href="mailto:{{ contact_email }} "> {{ contact_email }} </a>
